[apple]
    xctool_path = /usr/local/bin/xctool

[cache]
    mode = dir
    dir_max_size = 512MB
    
[cxx]
    cflags = -std=gnu11
    cxxflags = -std=c++14 -stdlib=libc++
    default_platform = iphonesimulator-x86_64
    combined_preprocess_and_compile = true

[project]
  ide = xcode
  ignore = \
    .git, \
    .hg, \
    .buckd

[swift]
  version = 4.0